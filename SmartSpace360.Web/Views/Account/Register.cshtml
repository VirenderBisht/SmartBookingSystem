@model SmartSpace360.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<!-- Font Awesome CDN for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-pVPSF+ZlNmVk+6Xw+ltX9y3akfLqkk0XJ8MfsMDk5xHMQI6Z5s+vEIbZwIksxA4uZSk1fK8sI7rw9zyy0w3H6g==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="min-h-screen flex items-center justify-center bg-white-100 px-4">
    <div class="bg-white shadow-2xl rounded-2xl max-w-5xl w-full grid grid-cols-1 md:grid-cols-2 overflow-hidden">

        <!-- Form Section -->
        <div class="p-10 md:p-14">
            <div class="flex items-center gap-2 mb-8">
                <img src="https://cdn-icons-png.flaticon.com/512/8370/8370979.png" alt="SmartSpace360 Logo" class="w-10 h-10">
                <h2 class="text-3xl font-bold text-gray-800">Sign up</h2>
            </div>

            <form asp-action="Register" method="post" class="space-y-6">
                <!-- Full Name -->
                <div class="relative border-b border-gray-400 focus-within:border-indigo-600">
                    <span class="absolute left-0 top-2 text-gray-500"><i class="fas fa-user"></i></span>
                    <input asp-for="FullName" placeholder="Full Name" class="pl-6 py-2 w-full bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none" />
                    <span asp-validation-for="FullName" class="text-red-500 text-xs"></span>
                </div>

                <!-- Email -->
                <div class="relative border-b border-gray-400 focus-within:border-indigo-600">
                    <span class="absolute left-0 top-2 text-gray-500"><i class="fas fa-envelope"></i></span>
                    <input asp-for="Email" placeholder="Email" class="pl-6 py-2 w-full bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>

                <!-- Password -->
                <div class="relative border-b border-gray-400 focus-within:border-indigo-600">
                    <span class="absolute left-0 top-2 text-gray-500"><i class="fas fa-lock"></i></span>
                    <input asp-for="Password" type="password" placeholder="Password" class="pl-6 py-2 w-full bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs"></span>
                </div>

                <!-- Role -->
                <div class="relative border-b border-gray-400 focus-within:border-indigo-600">
                    <span class="absolute left-0 top-2 text-gray-500"><i class="fas fa-briefcase"></i></span>
                    <select asp-for="RoleId" class="pl-6 py-2 w-full bg-transparent text-gray-800 placeholder-gray-500 focus:outline-none">
                        <option value="">Select Role</option>
                        <option value="1">Admin</option>
                        <option value="2">Employee</option>
                    </select>
                    <span asp-validation-for="RoleId" class="text-red-500 text-xs"></span>
                </div>

                <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-lg font-medium hover:bg-indigo-700 transition">Register</button>
            </form>
        </div>

        <!-- Image + Text Section -->
   <div class="hidden md:flex flex-col justify-center items-center bg-white-50 p-10 text-center h-full">
    <img src="@Url.Content("~/SmartSpaceimage.jpg")"
         alt="SmartSpace360 Workspace"
         />

    <p class="text-gray-700 text-base italic leading-relaxed px-4">
        <strong>SmartSpace360</strong> — Book. Work. Win.
    </p>
</div>

    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
